<p id="notice"><%= notice %></p>

<!-- banner section -->
<div class="banner">

  <div class="banner-container">
    <div class="tagline">
        YOUR TURN TO EARN
    </div>
    <div class="sub-tagline">
        Rent out your tools for passive income or rent tools to avoid having to purchase.
    </div>
        <div class="sign-up-buttons">
          <button type="button" class="sign-in-button-container1 btn btn-danger btn-lg">  
                <% if current_user.present? %>
                    <%= link_to 'List a Tool', new_tool_path %>
                <% else %>
                    <%= link_to 'Sign In Now!', new_user_session_path %>
                
         </button>
         <button type="button" class="sign-in-button-container2 btn btn-default btn-lg">
               <%= link_to 'Register Now!', new_user_registration_path %>
               <% end %>
         </button>
        </div>
  </div>
</div>

<!-- highlighted tools section -->

<div class="container-fluid" id="home-tool-wrapper">

  <div class="home-heading">
    <h3>Whats Popular</h3>
  </div>

  <div class="home-tools">

    <div class="row home-tool-row">

    <% @tools.each do |tool| %>

      <div class="col-md-4">
        <div class="home-tool-container">
            <div class="home-tool-image">
              <%= image_tag tool.tool_image.url(:medium) %>
            </div>
            <div class="home-tool-body">
              <div class="home-tool-text">
                <div class="home-tool-name">
                  <%= tool.name %>
                </div>
                <div class="home-tool-description">
                  <%= tool.description %>
                </div>
              </div>
              <div class="home-tool-details">
                <p>$25 / week</p>
              </div>
            </div>
          </br>
        </div>
      </div>  
    <% end %>
  </div>

  <!--second highlighted tools row-->


  </div>
</div>


